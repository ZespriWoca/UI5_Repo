							</Column>

							<!-- Load Port -->
							<Column>
								<Label text="{i18n>TXT_GENERIC_LOAD_PORT}" tooltip="{i18n>TXT_GENERIC_LOAD_PORT}" />
							</Column>

							<!-- Shipment Start Date -->
							<Column>
								<Label
									text="{i18n>TXT_COLLABORATION_TRADEOPPORTUNITIES_COLUMN_SHIPMENT_START_DATE}"
