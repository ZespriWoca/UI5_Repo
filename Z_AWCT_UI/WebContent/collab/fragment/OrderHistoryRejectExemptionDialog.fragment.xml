<core:FragmentDefinition xmlns="sap.m"
	xmlns:core="sap.ui.core" xmlns:form="sap.ui.layout.form">
	<Dialog
		title="{i18n>TXT_COLLABORATION_ORDERHISTORY_REJECT_EXEMPTION_DIALOG_TITLE}"
		type="Message" class="zAwctOrderHistoryCommentsDialogPadding"  busyIndicatorDelay="0">
		
		<form:Form id="orderHistoryRejectExemptionForm">
			<form:layout>
				<form:ResponsiveGridLayout />
			</form:layout>
			<form:formContainers>
				<form:FormContainer>
					<form:formElements>

						<form:FormElement
							label="{i18n>TXT_GENERIC_COMMENTS}">
							<form:fields>
								<!-- Comments -->
								<TextArea id="commentsTextArea" />
							</form:fields>
						</form:FormElement>

					</form:formElements>
				</form:FormContainer>
			</form:formContainers>
		</form:Form>
		
		<!-- Ok button -->
		<beginButton>
			<Button
				text="{i18n>TXT_GENERIC_OK}"
				dialogType="Message" press="handleOrderHistoryRejectExemptionOKPress" />
		</beginButton>
		
		<!-- Close button -->
		<endButton>
			<Button
				text="{i18n>TXT_GENERIC_CLOSE}"
				dialogType="Message" press="handleOrderHistoryRejectExemptionClosePress" />
		</endButton>
	</Dialog>
</core:FragmentDefinition>