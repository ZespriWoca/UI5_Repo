	<core:FragmentDefinition xmlns="sap.m"
	xmlns:core="sap.ui.core" xmlns:form="sap.ui.layout.form">
	<Dialog
		title="{i18n>TXT_GENERIC_COMMENTS}"
		type="Message" class="zAwctOrderHistoryCommentsDialogPadding">
		
		<form:Form id="orderHistoryCommentsForm" class="zAwctOrderHistoryCommentsLabelBold">
			<form:layout>
				<form:ResponsiveGridLayout />
			</form:layout>
			<form:formContainers>
				<form:FormContainer>
					<form:formElements>

						<form:FormElement
							label="{i18n>TXT_COLLABORATION_ORDERHISTORY_COMMENTS_DIALOG_ZESPRI_COMMENTS_LABEL}">
							<form:fields>
								<!-- ZESPRI Comments -->
								<Text id="zespriCommentsText" />
							</form:fields>
						</form:FormElement>
						
						<form:FormElement
							label="{i18n>TXT_COLLABORATION_ORDERHISTORY_COMMENTS_DIALOG_SUPPLIER_COMMENTS_LABEL}">
							<form:fields>
								<!-- Supplier Comments -->
								<Text id="supplierCommentsText" />
							</form:fields>
						</form:FormElement>

					</form:formElements>
				</form:FormContainer>
			</form:formContainers>
		</form:Form>
		
		<!-- Ok button -->
		<beginButton>
			<Button
				text="{i18n>TXT_GENERIC_OK}"
				dialogType="Message" press="handleOrderHistoryCommentsOKPress" />
		</beginButton>
	</Dialog>
</core:FragmentDefinition>