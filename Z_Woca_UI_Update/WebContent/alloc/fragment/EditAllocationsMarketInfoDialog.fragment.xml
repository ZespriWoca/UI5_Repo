	<core:FragmentDefinition xmlns="sap.m"
	xmlns:core="sap.ui.core" xmlns:layout="sap.ui.layout" xmlns:form="sap.ui.layout.form">
	<Dialog
		title="{i18n>TXT_ALLOCATION_EDITALLOCATIONS_DIALOG_TITLE_MARKET_INFO}"
		type="Message">
		<!-- Market info text -->
		<Text class="zAwctTextPaddingTop" id="marketInfoText"
			text="{path: 'MarketInfoText', formatter: '.formatMarketInfoText'}" />
		<!-- Close Button -->
		<endButton>
			<Button text="{i18n>TXT_GENERIC_CLOSE}"
				dialogType="Message" press="handleMarketInfoClose" />
		</endButton>
	</Dialog>
</core:FragmentDefinition>
